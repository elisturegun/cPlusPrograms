#ifndef INC_6_41_GCD_H
#define INC_6_41_GCD_H
int gcd(int a, int b){
    if(a == 0 || b == 0){
        return 0;
    }
    if(a == b){
        return a;
    }
    if(a > b){
        return gcd(a-b,b);
    }
    return gcd(a,b-a);
}
#endif //INC_6_41_GCD_H

#include <iostream>
#include "gcd.h";
/**
 * program to calculate common greatest divisor
 *
 */
using namespace std;
int main() {
    int first,second;
    cout << "Enter two integers: ";
    cin >> first;
    cin >> second;
    cout << "Common greatest divisor of " << first << " and " << second << " is " << gcd(first,second)<< endl;
    return 0;
}
